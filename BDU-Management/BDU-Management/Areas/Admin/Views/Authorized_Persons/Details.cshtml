@model BDU_Management.Models.Authorized_Persons

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content">
	<!--breadcrumbs-->
	<div id="content-header"></div>
	<!--End-breadcrumbs-->
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span9">
				<div>
					<dl class="dl-horizontal">
						<dt>
							Ad
						</dt>

						<dd>
							@Html.DisplayFor(model => model.authorized_person_name)
						</dd>

						<dt>
							Soyad
						</dt>

						<dd>
							@Html.DisplayFor(model => model.authorized_person_surname)
						</dd>

						<dt>
							Ata Adı
						</dt>

						<dd>
							@Html.DisplayFor(model => model.authorized_person_father_name)
						</dd>

						<dt>
							Email
						</dt>

						<dd>
							@Html.DisplayFor(model => model.authorized_person_email)
						</dd>

						<dt>
							Dərəcə
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Degree.degree_name)
						</dd>

						<dt>
							Cins
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Gender.gender_name)
						</dd>

						<dt>
							Vəzifə
						</dt>

						<dd>
							@Html.DisplayFor(model => model.User_Roles.user_role_name)
						</dd>

					</dl>
				</div>
				<p>
					@Html.ActionLink("Edit", "Edit", new { id = Model.authorized_person_id }) |
					@Html.ActionLink("Back to List", "Index")
				</p>
			</div>
		</div>
	</div>
</div>

