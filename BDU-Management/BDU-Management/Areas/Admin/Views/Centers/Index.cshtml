@model IEnumerable<BDU_Management.Models.Center>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content">
	<!--breadcrumbs-->
	<div id="content-header"></div>
	<!--End-breadcrumbs-->
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span6">
				<table class="table">
					<tr>
						<th>
							Mərkəz Adı
						</th>
						<th>
							Mərkəz Rəhbəri
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.center_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Authorized_Persons.authorized_person_name)
								@Html.DisplayFor(modelItem => item.Authorized_Persons.authorized_person_surname)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { id = item.center_id }) |
								@Html.ActionLink("Details", "Details", new { id = item.center_id }) |
								@Html.ActionLink("Delete", "Delete", new { id = item.center_id })
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
	</div>
</div>

