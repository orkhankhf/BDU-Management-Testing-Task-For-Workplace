@model IEnumerable<BDU_Management.Models.Student>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content">
	<!--breadcrumbs-->
	<div id="content-header"></div>
	<!--End-breadcrumbs-->
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">
				<table class="table">
					<tr>
						<th>
							Ad
						</th>
						<th>
							Soyad
						</th>
						<th>
							Ata Adı
						</th>
						<th>
							Email
						</th>
						<th>
							Cins
						</th>
						<th>
							Fakultə
						</th>
						<th>
							Kafedra
						</th>
						<th>
							İxtisas
						</th>
						<th>
							İxtisas Növü
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.student_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.student_surname)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.student_father_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.student_email)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Gender.gender_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Profession.Cafedra.Faculty.faculty_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Profession.Cafedra.cafedra_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Profession.profession_name)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Profession.Profession_Types.profession_type_name)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { id = item.student_id }) |
								@Html.ActionLink("Details", "Details", new { id = item.student_id }) |
								@Html.ActionLink("Delete", "Delete", new { id = item.student_id })
							</td>
						</tr>
					}
				</table>
			</div>
		</div>
	</div>
</div>

