@model IEnumerable<BDU_Management.Models.User_Roles>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="content">
	<!--breadcrumbs-->
	<div id="content-header"></div>
	<!--End-breadcrumbs-->
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span6">
				<table class="table">
					<tr>
						<th>
							Vəzifə Adı
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.user_role_name)
							</td>
							<td>
								@Html.ActionLink("Details", "Details", new { id = item.user_role_id })
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
	</div>
</div>
				
